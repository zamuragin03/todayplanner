        <Button Content="Add" Click="Add" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15" Height="30" Width="50" Margin="345,277,605,277" />
        <Button Click="Remove" Content="Remove" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="13" Height="30" Width="50" Margin="417,277,533,277" />
