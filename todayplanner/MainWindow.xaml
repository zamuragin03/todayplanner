        <Rectangle Fill="Yellow" Height="270" Width="500" Margin="0,60,0,0" VerticalAlignment="Top" HorizontalAlignment="Right" />
        <Rectangle Fill="Green" Height="270" Width="500" Margin="0,60,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Right" />
        <Rectangle Fill="Blue" Height="270" Width="500" Margin="0,60,0,0" VerticalAlignment="Bottom" HorizontalAlignment="Left" />

        <Rectangle Fill="#FF096D82" Height="10" VerticalAlignment="Top" Margin="0,60,0,0" />
        <Rectangle Fill="#FF096D82" Height="10" VerticalAlignment="Center" Margin="0,60,0,0" />
        <Rectangle Fill="#FF096D82" Height="520" Width="10" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="0,67,0,0" />

